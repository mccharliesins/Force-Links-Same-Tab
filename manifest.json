{
  "manifest_version": 3,
  "name": "Force Links Same Tab",
  "version": "1.0",
  "description": "Remove target='_blank' from links to open in same tab",
  "permissions": ["activeTab", "scripting", "tabs", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Force links to open in same tab",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
